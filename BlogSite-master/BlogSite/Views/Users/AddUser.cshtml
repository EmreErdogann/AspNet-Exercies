
@{
    ViewBag.Title = "AddUser";
    Layout = "~/Views/Shared/_AdminUI.cshtml";
}




<div class="row">
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">@ViewBag.Title Formu</h3>
            </div>

            <form role="form">
                <div class="card-body">
                    <label>Talep Ettiğiniz Kullanıcı Adınız</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">@@</span>
                        </div>
                        <input type="text" class="form-control" placeholder="Kullanıcı Adı">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Adı</label>
                        <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Lütfen adınızı yazınız">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Soyadı</label>
                        <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Lütfen soyadınız giriniz">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Cinsiyeti</label>
                        <div class="form-group">

                            <select class="form-control">
                                <option>Erkek</option>
                                <option>Kadın</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputFile">Profil Resmi</label>
                        <div class="input-group">
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="exampleInputFile">
                                <label class="custom-file-label" for="exampleInputFile">Profil Resmi Seçmek İçin Tıklayınız</label>
                            </div>
                            <div class="input-group-append">
                                <span class="input-group-text" id="">Upload</span>
                            </div>
                        </div>
                    </div>

                    <!--Doğum Tarihi-->
                    <div class="form-group">
                        <label for="exampleInputEmail1">Doğum Tarihiniz</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                            </div>
                            <input type="text" class="form-control" data-inputmask-alias="datetime" data-inputmask-inputformat="dd/mm/yyyy" data-mask>
                        </div>
                    </div>
                    <!--Doğum Tarihi-->
                    <div class="form-group">
                        <label>Telefon Numarası (GSM)</label>

                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-phone"></i></span>
                            </div>
                            <input type="text" class="form-control" data-inputmask='"mask": "(999) 999-9999"' data-mask>
                        </div>
                        <!-- /.input group -->
                    </div>
                    <label>E-Posta Adresiniz</label>
                    <div class="input-group mb-3">

                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                        </div>
                        <input type="email" class="form-control" placeholder="Email">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Yaşadığınız Ülke</label>
                        <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Lütfen yaşadığınız ülkeyi giriniz.">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Yaşadığınız İl</label>
                        <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Lütfen yaşadığınız ili giriniz.">
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Bize kendinizden kısaca bahsedermisiniz ?</label>
                        <textarea class="form-control" rows="3" placeholder="Lütfen kendinizden bahsediniz."></textarea>
                    </div>



                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i>   Kaydet</button>
                </div>
            </form>


        </div>
    </div>
</div>
@section userDateTime{
    <script>
        //Datetime input script
        $(function () {

            //Datemask dd/mm/yyyy
            $('#datemask').inputmask('dd/mm/yyyy', { 'placeholder': 'dd/mm/yyyy' })
            //Money Euro
            $('[data-mask]').inputmask()
        })
    </script>
}
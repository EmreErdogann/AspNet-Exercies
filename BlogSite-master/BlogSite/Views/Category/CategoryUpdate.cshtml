@using BlogSite.Models
@model BlogSite.Models.Category
@{
    ViewBag.Title = "Kategori Güncelle";
    Layout = "~/Views/Shared/_AdminUI.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">@ViewBag.Title</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            @using (Html.BeginForm("CategoryUpdate", "Category", FormMethod.Post))
            {
                <div class="card-body col-md-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Kategori Adı</label>
                        @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })

                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Kategori Açıklaması </label>
                        @Html.TextBoxFor(c => c.Description, new { @class = "form-control" })
                    </div>

                </div>
                <input type="hidden" name="CategoryId" value="@Model.CategoryID" />
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-plus-circle"></i> Kategoriyi Güncelle</button>
                </div>
            }

        </div>



    </div>

    <!-- /.content -->
</div>


@using BlogSite.Models
@model List<Article>
@{
    ViewBag.Title = "Makale Listesi";
    Layout = "~/Views/Shared/_AdminUI.cshtml";
}


<!-- Main content -->

<div>
    <a href="/Articles/AddArticle" class="btn btn-info btn-block"><span class="fa fa-plus-circle"></span> Makale Ekle</a>
</div>

<br />
<section class="content">

    <!-- Default box -->
    <div class="card">

        <div class="card-header">
            <h3 class="card-title">Makaleler</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th style="width: 1%">
                            ID
                        </th>
                        <th style="width: 20%">
                            Makale Adı
                        </th>
                        <th style="width: 15%">
                            Makale Kategorisi
                        </th>
                        <th style="width: 8%" class="text-center">
                            Makale Yazarı
                        </th>
                        <th style="width: 10%" class="text-center">
                            Makale Beğeni Sayısı
                        </th>
                        <th style="width: 15%" class="text-center">
                            Makale Yorum Sayısı
                        </th>
                        <th style="width: 15%" class="text-center">
                            İşlemler
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Article item in Model)
                    {
                        <tr>
                            <td>
                                @item.ArticleID
                            </td>
                            <td>
                                <a>
                                    @item.Title
                                </a>
                                <br />
                                <small>
                                    Oluşturulma Tarihi @item.DateOfUpload
                                </small>
                            </td>
                            <td>
                                @item.Category.Name
                            </td>
                            <td class="text-center">
                                <h5><span class="badge badge-info">Big Boss</span></h5>
                            </td>
                            <td class="text-center">
                                <h4><span class="badge badge-success ">@item.LikeCount</span></h4>
                            </td>
                            <td class="text-center">
                                <h4><span class="badge badge-success ">@item.Comments.Count</span></h4>
                            </td>
                            <td class="project-actions text-right">
                                <a class="btn btn-primary btn-sm" href="#">
                                    <i class="fas fa-folder">
                                    </i>
                                    Detaylar
                                </a>
                                <a class="btn btn-info btn-sm" href="#">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Düzenle
                                </a>
                                <a class="btn btn-danger btn-sm" href="#">
                                    <i class="fas fa-trash">
                                    </i>
                                    Sil
                                </a>
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->

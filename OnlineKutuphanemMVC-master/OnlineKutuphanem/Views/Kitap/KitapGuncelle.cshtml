@model OnlineKutuphanem.Models.Entity.Kitap

@{
    ViewBag.Title = "Kitap Guncelle";

    Layout = "~/Views/Shared/Layout.cshtml";
}

    <div class="main-div">
        @using (Html.BeginForm("KitapGuncelle", "Kitap", FormMethod.Post))
        {
            <div class="panel">
                <h2>Kitap Ekleme Sayfası</h2>
            </div>
            <label>Kitap ID</label>
            <div class="form-group">
                @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
            </div>
            <label>Kitap Adı</label>
            <div class="form-group">
                @Html.TextBoxFor(k => k.AD, new { @class = "form-control" })
            </div>
            <label>Kitap Kategorisi</label>
            <div class="form-group">
              
                @Html.DropDownListFor(k =>k.Kategori1.ID, (List<SelectListItem>)ViewBag.kategori, new { @class = "form-control" })
            </div>
            <label>Kitap Yazarı</label>
            <div class="form-group">
              
                @Html.DropDownListFor(k => k.Yazar1.ID, (List<SelectListItem>)ViewBag.yazar, new { @class = "form-control" })
            </div>
            <label>Basım Yılı</label>
            <div class="form-group">
                @Html.TextBoxFor(k => k.BASIMYILI, new { @class = "form-control" })
                <label>Yayınevi</label>
                <div class="form-group">
                    @Html.TextBoxFor(k => k.YAYIMEVİ, new { @class = "form-control" })
                </div>
                <label>Sayfa Sayısı</label>
                <div class="form-group">
                    @Html.TextBoxFor(k => k.SAYFASAYFASI, new { @class = "form-control" })
                </div>
                <input type="hidden" name="Durum" value="True" />
                <button type="submit" class="btn btn-success"> Kitabı Ekle</button>
                <a href="/Kitap/Index" class="btn btn-primary"><i class="glyphicon glyphicon-backward"></i>    Kitap Listesine Dön</a>


            </div>
        }

    </div>
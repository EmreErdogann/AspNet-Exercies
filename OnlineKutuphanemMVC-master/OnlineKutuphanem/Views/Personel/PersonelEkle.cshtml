@model OnlineKutuphanem.Models.Entity.Personel
@{
    ViewBag.Title = "Personel Ekle";
    Layout = "~/Views/Shared/Layout.cshtml";
}



<div class="main-div">
    <div class="panel">
        <h2>Personel Ekleme Sayfası</h2>
    </div>
    <form class="form-group" method="post">
        <label>Personel Adı</label>
        <div class="form-group">
            @Html.TextBoxFor(p => p.PERSONEL1, new { @class = "form-control" })
            @Html.ValidationMessageFor(x=>x.PERSONEL1,"",new { @style="color:red"})
        </div>
        
            <button type="submit" class="btn btn-success"> Personeli Ekle</button>
            <a href="/Personel/Index" class="btn btn-primary"><i class="glyphicon glyphicon-backward"></i>    Personel Listesine Geri Dön</a>
    </form>
</div>


@model OnlineKutuphanem.Models.Entity.Kategori
@{
    ViewBag.Title = "Kategori Ekleme Sayfası";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("KategoriGuncelle", "Kategori", FormMethod.Post))
{

  

    <div class="main-div">
        <div class="panel">
            <h4>Kategori Ekle</h4>
        </div>
   
            <div class="form-group">
                <label>Kategori ID</label>
                <br />  
                @Html.TextBoxFor(k => k.ID, new {@readonly = "readonly", @class = "form-control" })
            <br />
            <label>Kategori Adı</label>
            <br />
                @Html.TextBoxFor(k => k.AD, new { @class = "form-control", @name="AD" })

            </div>
            <button type="submit" class="btn btn-success">Kategoriyi Güncelle</button>
            <a href="/Kategori/Index" class="btn btn-primary"><i class="glyphicon glyphicon-menu-left"></i>    Kategori Listesine Dön</a>
        
    </div>
}

